<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/noteFragment">

    <fragment
        android:id="@+id/noteFragment"
        android:name="com.geeks.my_app_4_2.ui.fragments.notes.NoteFragment"
        android:label="fragment_note"
        tools:layout="@layout/fragment_note" >
        <action
            android:id="@+id/action_noteFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:popUpTo="@id/noteFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/onboardFragment"
        android:name="com.geeks.my_app_4_2.ui.fragments.onboard.OnboardFragment"
        android:label="fragment_onboard"
        tools:layout="@layout/fragment_onboard" >

        <action
            android:id="@+id/action_onboardFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/onboardViewPagerFragment"
        android:name="com.geeks.my_app_4_2.ui.fragments.onboard.OnboardViewPagerFragment"
        android:label="fragment_onboard_view_pager"
        tools:layout="@layout/fragment_onboard_view_pager" >


    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.geeks.my_app_4_2.ui.fragments.notes.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="noteId"
            app:argType="integer"
            android:defaultValue="-1"/>
        <action
            android:id="@+id/action_detailFragment_to_noteFragment"
            app:destination="@id/noteFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.geeks.my_app_4_2.ui.fragments.signup.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" />
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.geeks.my_app_4_2.ui.fragments.chat.ChatFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chat" >
        <action
            android:id="@+id/action_chatFragment_to_noteFragment"
            app:destination="@id/noteFragment"/>
    </fragment>

</navigation>